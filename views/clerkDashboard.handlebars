<section id="clerkDashboard">
    <h1>Welcome {{user.name}}</h1>
	<p>Your email is {{user.email}}</p>
	<p>Role: {{user.role}}</p>
	<h2>Here's what we have in the inventory</h2>

    <button type="button" style="align:center"><a href="/products/add">Add Product</a></button>


	<table border="1" style="text-align: center;">
        <thead>
				<th>ID</th>
                <th>Category</th>
				<th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Bestseller</th>
                <th>Photo</th>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
					 <td>
                        <span>{{this.id}}</span>
                   </td>
                   <td>
                        <span>{{this.category}}</span>
                   </td>
                   <td>
                       <span>{{this.name}}</span>
                   </td>
				   <td>
                        <span>{{this.description}}</span>
                   </td>
                   <td>
                        <span>{{this.price}}</span>
                   </td>
                   <td>
                       <span>{{this.bestseller}}</span>
                   </td>
				   <td>
                      <img src="/img/{{this.thumb}}" width="30px" height="30px">
                   </td>
                   <td>
                        <a href="/task/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                        <a href="/task/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                   </td> 
                </tr>

                {{else}}
                    <td colspan="5">
                        <p>No products in the database</p>
                    </td>

                {{/each}}
    </tbody>
    </table>
</section>