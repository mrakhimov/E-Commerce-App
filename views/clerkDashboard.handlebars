<section id="clerkDashboard">
    <div class="container-fluid">
        <h1>Welcome {{user.name}}</h1>
        <h2>Your email is {{user.email}}</h2>
        <h2>Role: {{user.role}}</h2>

    
        <div class="form-group">
            <br>
            <form method="POST" action="/dashboard">
                <select class="form-control form-control-lg" name="category">
                        <option selected value="all">All</option>
                        <option name="Women's Fashion" value="Women's Fashion">Women's Fashion</option>
                        <option name="Beauty" value="Beauty">Beauty</option>
                        <option name="Jewellery" value="Jewellery">Jewellery</option>
                        <option name="Watches" value="Watches">Watches</option>
                </select><br>
                <input class="form-control form-control-lg" type="submit" value="Search">
            </form>     <br><br>
        </div>

            <table class="table table-striped table-dark" border="1" style="text-align: center;">
                <thead class="thead-light">
                        <th>ID</th>
                        <th>Category</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Bestseller</th>
                        <th>Photo</th>
                        <th>Quantity</th>
                        <th>Action</th>
                </thead>
                <tbody>
                    {{#each data}}
                        <tr>
                            <td>
                                <span>{{this.id}}</span>
                        </td>
                        <td>
                                <span>{{this.category}}</span>
                        </td>
                        <td>
                            <span>{{this.name}}</span>
                        </td>
                        <td>
                                <span>{{this.description}}</span>
                        </td>
                        <td>
                                <span>{{this.price}}</span>
                        </td>
                        <td>
                            <span>{{this.bestseller}}</span>
                        </td>
                        
                        <td>
                            <img src="/img/{{this.thumb}}" width="30px" height="30px">
                        </td>
                        <td>
                            <span>{{this.quantity}}</span>
                        </td>
                        <td>
                                <a class="btn btn-danger btn-lg" href="/products/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                                <a class="btn btn-danger btn-lg" href="/products/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                        </td> 
                        </tr>

                        {{else}}
                            <td colspan="5">
                                <p>No products in the database</p>
                            </td>

                        {{/each}}
            </tbody>
            </table><br>
            <a href="/products/add" class="btn btn-danger btn-lg" role="button">Add Product</a>
    </div>
    
</section>

